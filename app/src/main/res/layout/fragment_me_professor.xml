<?xml version="1.0" encoding="utf-8"?>
<org.jackyonline.refreshdemo.RefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:can_load="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/item_background_professor_default"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <cn.incongress.xhy_guke.uis.CircleImageView
                android:id="@+id/civ_user_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/layout_margin"
                android:src="@mipmap/item_vvtalk_professor_head_default" />

            <TextView
                style="@style/wrap_wrap"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="沈宏易"
                android:textColor="@color/theme_blue" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_follow_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="关注"
                    android:textColor="@color/white" />

                <View
                    style="@style/v_line"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_fan_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:text="粉丝"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/fill_wrap"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@color/background_white_transplant"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/me_visit_count" />

                    <TextView
                        android:id="@+id/tv_visit_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="总访问量()"
                        android:textColor="@color/theme_blue"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/me_praise_count" />

                    <TextView
                        android:id="@+id/tv_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="总点赞数()"
                        android:textColor="@color/theme_blue"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/me_comment_count" />

                    <TextView
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="总评论数()"
                        android:textColor="@color/theme_blue"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_recent_situation"
            style="@style/fill_wrap"
            android:background="@color/white"
            android:padding="@dimen/layout_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/me_tab_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="周访问"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_week_visit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/theme_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_weight="1"
                android:background="@mipmap/me_tab_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="周点赞"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_week_praise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/theme_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_weight="1"
                android:background="@mipmap/me_tab_background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:text="周评论"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_week_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/theme_blue" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/me_my_publish"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/ll_my_publish_vvtalk"
            style="@style/fill_wrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/me_my_publish_vvtalk"
                android:textSize="@dimen/text_size_media" />

            <TextView
                android:id="@+id/tv_publish_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/me_next" />
        </LinearLayout>

        <View style="@style/h_line" />


        <LinearLayout
            style="@style/fill_wrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/me_my_publish_dynamic"
                android:textSize="@dimen/text_size_media" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/me_next" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/me_my_operation"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            style="@style/fill_wrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/me_download"
                android:textSize="@dimen/text_size_media" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/me_next" />
        </LinearLayout>

        <View style="@style/h_line" />

        <LinearLayout
            style="@style/fill_wrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/me_collection"
                android:textSize="@dimen/text_size_media" />

            <TextView
                android:id="@+id/tv_collection_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/me_next" />
        </LinearLayout>
    </LinearLayout>

</org.jackyonline.refreshdemo.RefreshLayout>