<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView style="@style/fill_wrap"
        android:padding="@dimen/layout_padding"
        android:text="@string/post_post_vv_talk"
        />

    <EditText style="@style/fill_wrap"
        android:background="@color/edit_background"
        android:layout_margin="@dimen/layout_margin"
        android:textColorHint="@color/edit_hint_color"
        android:hint="@string/post_edit_hint"
        android:gravity="start"
        android:padding="6dp"
        android:textSize="@dimen/text_size_media"
        android:minLines="5"
        />

    <LinearLayout style="@style/fill_wrap" android:orientation="horizontal" android:layout_margin="@dimen/layout_margin">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_post_by_nickname"
            />
    </LinearLayout>

</LinearLayout>