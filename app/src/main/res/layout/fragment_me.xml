<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_background_professor_default"
        android:gravity="center_horizontal"
        android:orientation="vertical"
         >

        <cn.incongress.xhy_guke.uis.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="@dimen/layout_margin"
            android:src="@mipmap/item_vvtalk_professor_head_default" />

        <TextView
            style="@style/wrap_wrap"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="沈宏易"
            android:textColor="@color/theme_blue" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="关注256"
                android:textColor="@color/white" />

            <View
                style="@style/v_line"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="关注256"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/fill_wrap"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_padding"
            android:background="@color/background_white_transplant"
            android:paddingBottom="@dimen/layout_padding"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_visit_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:text="总访问量(5465)"
                    android:textColor="@color/theme_blue"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_praise_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总点赞数(5465)"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/theme_blue"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_comment_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:text="总评论数(5465)"
                    android:textColor="@color/theme_blue"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_recent_situation"
        style="@style/fill_wrap"
        android:padding="@dimen/layout_padding">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@mipmap/me_tab_background"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="周访问"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="+24"
                android:gravity="center"
                android:textColor="@color/theme_blue"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_margin"
            android:gravity="center_vertical"
            android:background="@mipmap/me_tab_background"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="周点赞"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/theme_blue"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_margin"
            android:background="@mipmap/me_tab_background"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="周评论"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/theme_blue"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:text="@string/me_my_publish"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:textSize="@dimen/text_size_small"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/fill_wrap" android:orientation="horizontal" android:background="@color/white" android:padding="@dimen/layout_padding">
            <TextView
                android:layout_width="0dp"
                android:textSize="@dimen/text_size_media"
                android:layout_weight="8"
                android:text="@string/me_my_publish_vvtalk"
                android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:text="32"
            android:gravity="right"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/me_next"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/h_line"/>


    <LinearLayout
        android:gravity="center_vertical"
        style="@style/fill_wrap" android:orientation="horizontal" android:background="@color/white" android:padding="@dimen/layout_padding">
        <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/text_size_media"
            android:layout_weight="8"
            android:text="@string/me_my_publish_dynamic"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:text="45"
            android:gravity="right"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/me_next"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="@string/me_my_operation"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:textSize="@dimen/text_size_small"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/fill_wrap" android:orientation="horizontal" android:background="@color/white" android:padding="@dimen/layout_padding">
        <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/text_size_media"
            android:layout_weight="8"
            android:text="@string/me_download"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:text="6"
            android:gravity="right"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/me_next"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/h_line"/>

    <LinearLayout
        android:gravity="center_vertical"
        style="@style/fill_wrap" android:orientation="horizontal" android:background="@color/white" android:padding="@dimen/layout_padding">
        <TextView
            android:layout_width="0dp"
            android:textSize="@dimen/text_size_media"
            android:layout_weight="8"
            android:text="@string/me_collection"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="@dimen/text_size_small"
            android:text="8"
            android:gravity="right"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/me_next"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>