<?xml version="1.0" encoding="utf-8"?>
<org.jackyonline.refreshdemo.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:can_load="false"
    app:can_refresh="true">

    <cn.incongress.xhy_guke.uis.RecyclerViewScrollview
        style="@style/fill_fill"
        android:fillViewport="true"
        android:layout_marginTop="6dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/wrap_wrap"
                android:layout_centerInParent="true"
                android:padding="6dp"
                android:text="@string/suggest_specail" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_special_suggest"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rcv_hot_suggest"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </cn.incongress.xhy_guke.uis.RecyclerViewScrollview>
</org.jackyonline.refreshdemo.RefreshLayout>